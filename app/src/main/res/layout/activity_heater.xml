<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_weight="0.00002"
        android:background="@color/myred"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/heater_back"
                android:layout_margin="7dp"
                android:background="@drawable/lockbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/round_arrow_back_white_48"
                android:layout_marginLeft="8dp">
            </ImageButton>


        </LinearLayout>


        <LinearLayout
            android:layout_margin="4dp"
            android:background="@color/myred"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heater"
                android:textSize="33sp">

            </TextView>


        </LinearLayout>

    </LinearLayout>


<LinearLayout
    android:backgroundTint="@color/mygrey"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.8">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mygrey">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="8dp"
                android:gravity="center|end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heater Temperature:"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22sp">

                </TextView>
            <TextView
                android:id="@+id/heatertemp"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heater Off"
                android:textSize="22dp"
                android:textColor="@color/black">

            </TextView>


                <com.suke.widget.SwitchButton
                    app:sb_enable_effect="true"
                    app:sb_checked_color="@color/myred"
                    app:sb_uncheckcircle_color="@color/myred"
                    android:id="@+id/heater_onoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.suke.widget.SwitchButton>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mygrey">

        <com.sdsmdg.harjot.crollerTest.Croller
            android:layout_margin="30dp"
            android:id="@+id/croller"
            android:max="35"
            app:label_color="@color/mygrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:back_circle_color="#EDEDED"
            app:indicator_color="@color/myblue"
            app:indicator_width="10"
            app:is_continuous="false"
            app:main_circle_color="#FFFFFF"
            app:progress_primary_color="@color/myblue"
            app:progress_secondary_color="#EDEDED"/>

    </LinearLayout>

</LinearLayout>
</LinearLayout>